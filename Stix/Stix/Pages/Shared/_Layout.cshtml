<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stix.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css"/>
</head>

<body>
    <header>
            <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">STIX Database <span class="badge bg-dark mx-2">v1.01</span></a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"> 
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="" class="nav-link">Add new incident</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link">Import</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="moderator/Moderator">About</a>
                    </li>
                    <li class="nav-item log-out">
                        <a class="nav-link button btn-outline-dark" asp-page="login/LoginUser">Log out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    </header>

    <div class="horizontalBreak flex"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Stix - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>